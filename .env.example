# Core Application Settings
PORT=9004
NODE_ENV=production

# Security Settings
JWT_SECRET=your-very-strong-secret-key-here
ENCRYPTION_KEY=32-character-encryption-key-here

# Admin User Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme-strong-password
ADMIN_NAME="System Administrator"

# SMTP Configuration (optional - for email notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=ncrelay@example.com
SMTP_FROM_NAME="NCRelay Notifications"

# Optional Frontend URL (for links in emails)
FRONTEND_URL=https://your-ncrelay-instance.example.com

# Optional Logging Configuration
LOG_LEVEL=info

# Optional Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Notification Queue Settings
QUEUE_PROCESSING_INTERVAL=30000 # Process queue every 30 seconds
DEFAULT_MAX_RETRIES=3
DEFAULT_RETRY_DELAY=300000 # 5 minutes in milliseconds

# Database Configuration
# Default is SQLite, which uses app.db in the application root
DB_TYPE=sqlite

# Timezone
TZ=America/New_York

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1
