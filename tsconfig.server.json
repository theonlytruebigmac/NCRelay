{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "outDir": "./dist/src",
    "rootDir": "./src",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": [
    "src/lib/**/*.ts"
  ],
  "exclude": [
    "src/app/**/*",
    "src/components/**/*",
    "node_modules"
  ]
}
